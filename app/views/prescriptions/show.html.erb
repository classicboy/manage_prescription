<%= turbo_frame_tag :content, class: "w-full flex flex-col space-y-12" do %>
  <h1 class="text-3xl">Prescription Detail</h1>

  <div class="flex flex-col space-y-6">
    <p><strong>Patient Name:</strong> <%= @prescription.patient_name %> </p>
    <p><strong>Patient Phone:</strong> <%= @prescription.patient_phone %> </p>

    <div class="flex flex-col space-y-4">
      <%= render "shared/inline_edit", model: @prescription, attribute: :detail, resource: @prescription, container_class: "max-w-3xl flex flex-col space-y-2 group relative" do %>
        <%= label_tag :detail, nil, class: "font-bold mb-2" %>
        <%= text_area_tag :detail, @prescription.detail, class: "border rounded-md border rounded-md px-3 py-2 w-full", disabled: true, rows: 5 %>
      <% end %>

      <%= render "shared/inline_edit", model: @prescription, attribute: :date, resource: @prescription, container_class: "max-w-3xl flex flex-col space-y-2 group relative" do %>
        <%= label_tag :date, nil, class: "font-bold mb-2" %>
        <%= date_field_tag :date, @prescription.date.to_date, class: "border rounded-md border rounded-md px-3 py-2 w-full", disabled: true %>
      <% end %>

      <%= render "shared/inline_edit", model: @prescription, attribute: :remark, resource: @prescription, container_class: "max-w-3xl flex flex-col space-y-2 group relative" do %>
        <%= label_tag :remark, nil, class: "font-bold mb-2" %>
        <%= text_area_tag :remark, @prescription.remark, class: "border rounded-md border rounded-md px-3 py-2 w-full", disabled: true, rows: 5 %>
      <% end %>
    </div>
  </div>

  <button class="text-center text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-sm px-5 py-2.5">
    <%= link_to "Back To List", prescriptions_path %>
  </button>
<% end %>
