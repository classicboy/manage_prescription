<%# locals: (prescription:) -%>

<tr class="bg-white border-b hover:bg-gray-50">
  <th scope="row" class="sticky lg:static left-0 bg-white hover:bg-gray-50 lg:bg-inherit px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
    <%= prescription.patient_name %>
  </th>
  <td class="px-6 py-4">
    <%= prescription.patient_phone %>
  </td>
  <td class="px-6 py-4">
    <%= prescription.date.strftime("%m/%d/%Y") %>
  </td>
  <td class="px-6 py-4">
    <%= prescription.detail.truncate(50) %>
  </td>
  <td class="px-6 py-4">
    <%= prescription.remark.truncate(50) %>
  </td>
  <td class="px-6 py-4 text-right space-x-6">
    <%= link_to "Show", prescription_path(prescription), class: "font-medium text-blue-600 hover:underline", data: { turbo_action: :advance } %>
  </td>
</tr>
